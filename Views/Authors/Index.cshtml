@model IEnumerable<BibliotecaAsp.Models.Author>
@{
    ViewData["Title"] = "Lista de Autores";
}

<div class="row justify-content-center my-4">
    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> Lista de Autores</h5>
                <a asp-action="Create" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-lg"></i> Crear nuevo
                </a>
            </div>
            <div class="card-body p-0" style="max-height: 400px; overflow-y: auto;">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@(ViewData["NameSortParm"])"
                                   class="text-dark text-decoration-none">
                                    Nombre
                                    <i class="bi @((ViewData["NameSortParm"] as string ?? "").Contains("desc")
                                        ? "bi-caret-down-fill" : "bi-caret-up-fill")"></i>
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@(ViewData["SurnameSortParm"])"
                                   class="text-dark text-decoration-none">
                                    Apellido
                                    <i class="bi @((ViewData["SurnameSortParm"] as string ?? "").Contains("desc")
                                        ? "bi-caret-down-fill" : "bi-caret-up-fill")"></i>
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortOrder="@(ViewData["DateSortParm"])"
                                   class="text-dark text-decoration-none">
                                    Fecha de nacimiento
                                    <i class="bi @((ViewData["DateSortParm"] as string ?? "").Contains("desc")
                                        ? "bi-caret-down-fill" : "bi-caret-up-fill")"></i>
                                </a>
                            </th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
