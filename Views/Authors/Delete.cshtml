@model BibliotecaAsp.Models.Author

@{
    ViewData["Title"] = "Eliminar Autor";
}

<div class="container mt-5">
    <div class="card card-custom mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-trash"></i> Eliminar Autor</h5>
        </div>
        <div class="card-body">
            <p>¿Estás seguro que deseas eliminar al autor <strong>@Model.Name @Model.Surname</strong>?</p>
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
