@model BibliotecaAsp.Models.Author

@{
    ViewData["Title"] = "Detalles de Autor";
}

<div class="container mt-5">
    <div class="card card-custom mx-auto" style="max-width: 800px;">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> Detalles del Autor</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Apellido</dt>
                <dd class="col-sm-9">@Model.Surname</dd>

                <dt class="col-sm-3">Fecha de nacimiento</dt>
                <dd class="col-sm-9">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>
            </dl>

            <hr />

            <h6>Libros asociados</h6>
            @if (Model.Books?.Any() ?? false)
            {
                <div style="max-height: 250px; overflow-y: auto;">
                    <ul class="list-group">
                        @foreach (var book in Model.Books)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @book.Title
                                <span class="badge bg-secondary">@book.PublicationDate.ToString("yyyy")</span>
                            </li>
                        }
                    </ul>
                </div>
            }
            else
            {
                <p><em>— Este autor no tiene libros registrados.</em></p>
            }

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>
