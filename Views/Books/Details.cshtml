@model BibliotecaAsp.Models.Book

@{
    ViewData["Title"] = "Detalles del Libro";
}

<div class="container mt-5">
    <div class="card card-custom mx-auto" style="max-width: 700px;">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-journal-text"></i> Detalles del Libro</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Título</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Resumen</dt>
                <dd class="col-sm-9">@Model.Summary</dd>

                <dt class="col-sm-3">Fecha de publicación</dt>
                <dd class="col-sm-9">@Model.PublicationDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Autor</dt>
                <dd class="col-sm-9">@Model.Author.FullName</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
