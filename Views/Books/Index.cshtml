@model IEnumerable<BibliotecaAsp.Models.Book>
@{
    ViewData["Title"] = "Libros";
}

<div class="container mt-5">
    <div class="card card-custom mx-auto" style="max-width: 900px;">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-journal-bookmark"></i> Listado de Libros</h5>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-lg"></i> Crear libro
            </a>
        </div>
        <div class="card-body p-0" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a asp-action="Index"
                               asp-route-sortOrder="@(ViewData["TitleSortParm"])"
                               class="text-dark text-decoration-none">
                                Título
                                <i class="bi @((ViewData["TitleSortParm"] as string ?? "").Contains("desc")
                                        ? "bi-caret-down-fill" : "bi-caret-up-fill")"></i>
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index"
                               asp-route-sortOrder="@(ViewData["DateSortParm"])"
                               class="text-dark text-decoration-none">
                                Publicación
                                <i class="bi @((ViewData["DateSortParm"] as string ?? "").Contains("desc")
                                        ? "bi-caret-down-fill" : "bi-caret-up-fill")"></i>
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index"
                               asp-route-sortOrder="@(ViewData["AuthorSortParm"])"
                               class="text-dark text-decoration-none">
                                Autor
                                <i class="bi @((ViewData["AuthorSortParm"] as string ?? "").Contains("desc")
                                        ? "bi-caret-down-fill" : "bi-caret-up-fill")"></i>
                            </a>
                        </th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.PublicationDate.ToString("dd/MM/yyyy")</td>
                            <td>@book.Author.FullName</td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end align-items-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
